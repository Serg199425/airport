<!DOCTYPE html>
<html>
<head>
  <title>Airport</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "autocomplete-rails.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <p class="navbar-brand" href="#">Airpot System</p>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav menu-bar">
          <li class="flights_index">
            <%= link_to "In Progress", flights_index_path %>
          </li>
          <li class="flights_history">
            <%= link_to "Recently Ended", flights_history_path %>
          </li>
          <li class="airplanes_index">
            <%= link_to "Airplanes", airplanes_index_path %>
          </li>
        </ul>
        <%= form_tag (airplane_search_path), class: "navbar-form navbar-left" do %>
          <div class="form-group">
            <%= autocomplete_field_tag :registration_number, '', autocomplete_airplane_path, placeholder: "Airplane register number", class: "form-control" %>
          </div>
          <button type="submit" class="btn btn-default">Show</button>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Log Out', destroy_user_session_path, :method => :delete, class: "btn btn-primary button-link float-right-button logout-button" %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<%= yield %>

</body>
</html>
